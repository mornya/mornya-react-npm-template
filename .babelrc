{
  "presets": [
    [
      "env", {
        "modules": false,
        "targets": {
          "browsers": [
            "> 1%",
            "last 2 versions",
            "not ie <= 8"
          ]
        }
      }
    ],
    "stage-2",
    "es2015",
    "react",
    "flow"
  ],
  "plugins": [
    "emotion",
    "react-hot-loader/babel",
    "react-html-attrs",
    "transform-class-properties",
    "transform-runtime"
  ],
  "env": {
    "test": {
      "presets": [
        "env",
        "stage-2"
      ],
      "plugins": [
        "istanbul"
      ]
    }
  }
}
